<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="com.example.SpringTutorial.DI.ByConstructor.primitive_stringBased.Employee" name="emp">
        <constructor-arg value="10" type="int" />
    </bean>

    <bean class="com.example.SpringTutorial.DI.ByConstructor.primitive_stringBased.Employee" name="emp1">
        <constructor-arg value="JAVA" type="String" />
    </bean>

    <bean class="com.example.SpringTutorial.DI.ByConstructor.primitive_stringBased.Employee" name="emp2">
        <constructor-arg value="10"  />
        <constructor-arg value="JAVA"  />
    </bean>
</beans>